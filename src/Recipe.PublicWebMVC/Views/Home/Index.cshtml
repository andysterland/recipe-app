@model PublicWebMVC.Models.RecipesViewModel

@{
    ViewData["Title"] = "Recipes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<main role="main">
    <div class="inline" style="padding: 5%;">
        <form asp-controller="Home" asp-action="Search" class="form-inline">
            <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Search Recipes" aria-label="Search" style="width: 90%" value="@Model.SearchTerm"/>
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    <div class="album py-5 bg-light">
        <div class="container">
            <div class="row" id="cardContainer">

                @if (Model.Recipes != null && Model.Recipes.Count > 0)
                { 
                    @foreach (var item in Model.Recipes)
                    {
                    <div class="col-md-3 recipe-card">

                        <div class="card mb-3 box-shadow">

                            <img class="card-img-top" src="@item.Image" alt="Image of @item.Title">
                            <div class="card-body">

                                <p class="card-text">@item.Title</p>
                                <div class="d-flex justify-content-between align-items-center">

                                    <small class="text-muted">from @item.SourceName</small>
                                    <small class="text-muted"><strong>@item.ReadyInMinutes mins</strong></small>

                                </div>
                                <div class="d-flex justify-content-between align-items-center">

                                    <small class="text-muted">Rating: @item.SpoonacularScore%</small>
                                </div>
                            </div>
                        </div>
                    </div>
                    }
                }
                else
                {
                    <div>Sorry, no matches for @Model.SearchTerm found.</div>
                }

            </div>
        </div>
    </div>
</main>
